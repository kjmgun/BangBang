                                </tr>
                            </thead>
                            <tbody>
                               <!-- controller.js에서 result값들을 notice로 받아옴(list형태) -->
                                <% notice.forEach((item)=>{ %>
                                    <tr class='clickable-row'>
                                        <td style="width:13%;">
                                            <%= item.Notice_ID %>
                                        </td>
                                        <td style="width:50%;">
                                            <a href="/notice/<%= item.Notice_ID %>">
                                                <%= item.Notice_Title %>
                                            </a>
                                        </td>
                                        <td>
                                            관리자
                                        </td>
                                        <td>
                                            <%= new Date(item.Notice_Date).toLocaleString() %>
                                        </td>
                                    </tr>
                                    <%})%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
